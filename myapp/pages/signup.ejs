		Password:<br>
		<input type="password" name="password" placeholder="Password" required><br><br>
        Retype-Password:<br>
		<input type="password" name="re-password" placeholder="Password" required><br><br>
		<!-- submit button -->
		<input type="submit" value="Register">
		<% if(error == true) { %>
			<label class="errorMsg" color="red"> <%= msg %></label>
		<%} %>
	</form>
	<br><br><br><br><br>
	<form >
